<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sanguine.demo.DrawableTestActivity">

    <com.example.sanguine.demo.MyLinearLayout
        android:id="@+id/drawable_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:drawable="@drawable/selector_drawable_test" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="change"
        android:text="随机"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="change1"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="change2"
        android:text="2"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="change3"
        android:text="3"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

</LinearLayout>
